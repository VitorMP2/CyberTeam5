@page
@model CTRestaurant.App.Frontend.Pages.DetallesModel
@{
    @switch (@Model.item)
    {
        case 1:
            ViewData["Title"] = "Detalles Profesor";
            break;
        case 2:
            ViewData["Title"] = "Detalles Registro";
            break;
        case 3:
            ViewData["Title"] = "Detalles Administrativo";
            break;
        default:
        break;
    }
    //ViewData["Title"] = "Detalles";
}
@switch (@Model.item)
{
    case  1:

        <h1>Detalles del profesor</h1>
        <table class="table">
            <tr>
                <td>@Model.profesor.nombre</td>
                <td>@Model.profesor.apellido</td>
                <td>@Model.profesor.Facultad</td>
                <td>@Model.profesor.Cubiculo</td>
                <td>@Model.profesor.edad</td>
                <td>@Model.profesor.estadoCovid</td>
            </tr>
        </table>
    <a class="btn btn-primary text-dark" asp-area="" asp-page="/Listas/Profesores">Profesores</a>
    break;
    case  2:
        <h1>Detalles del registro @Model.registroRestaurante.Id</h1>
        <table class="table" style="text-align:center;">
            <tr>

                <th>Fecha</th>
                <th>Aforo</th>
                <th>Cantidad Mesas</th>
                <th>Puestos Por Mesa</th>
            </tr>
            <tr>
                <td>@Model.registroRestaurante.FechaRegistro.ToShortDateString()</td>
                <td>@Model.registroRestaurante.Aforo</td>
                <td>@Model.registroRestaurante.CantidadMesas</td>
                <td>@Model.registroRestaurante.PuestosPorMesa</td>
            </tr>

        </table>
    <input class="btn btn-primary" type="button" onclick="history.back()" name="volver atrás" value="Volver Atrás">
    break;
    case  3:

        <h1>Detalles de Administrativo</h1>
        <table class="table">
            <tr>
                <td>@Model.administrativo.nombre</td>
                <td>@Model.administrativo.apellido</td>
                <td>@Model.administrativo.Oficina</td>
                <td>@Model.administrativo.Dependencia</td>
                <td>@Model.administrativo.edad</td>
                <td>@Model.administrativo.estadoCovid</td>
            </tr>
        </table>
    <a class="btn btn-primary text-dark" asp-area="" asp-page="/Listas/Administrativos">Administrativos</a>
    break;
    default:
    break;
}