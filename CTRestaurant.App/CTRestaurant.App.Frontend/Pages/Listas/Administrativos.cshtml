@page
@model CTRestaurant.App.Frontend.Pages.AdministrativosModel
@{
}
<h1>Listado Administrativos</h1>
<table class="table">
    @foreach (var administrativo in Model.Administrativos)

    {
        <tr>
            <td>@administrativo.nombre</td>
            <td>@administrativo.apellido</td>
            <td>@administrativo.Oficina</td>
            <td>@administrativo.Dependencia</td>
            <td>@administrativo.identificacion</td>
            <td>@administrativo.edad</td>
            <td>@administrativo.estadoCovid</td>
            <td>
                <a class="btn btn-primary table-btn" asp-page="./Detalles" asp-route-Id="@administrativo.id" asp-route-item="3">
                    <i class="fas fa-info-circle" aria-hidden="true">

                    </i>
                </a>
            </td>
            <td>
                <a class="btn btn-secondary table-btn" asp-page="./Editar" asp-route-Id="@administrativo.id" asp-route-item="3">
                    <i class="fas fa-address-book" aria-hidden="true">

                    </i>
                </a>
            </td>
            <td>
                <a class="btn btn-danger table-btn" asp-page="./Eliminar" asp-route-Id="@administrativo.id" asp-route-item="3">
                    <i class="fas fa-book-dead" aria-hidden="true">

                    </i>
                </a>
            </td>
        </tr>

    }
</table>
<a asp-page=".\Editar" class="btn btn-primry" asp-route-item="3">Adicionar Administrativo</a>

